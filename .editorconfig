# EditorConfig configuration for Quiz App
# See https://editorconfig.org for more information

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.{html,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{sh,bash}]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{toml,ini}]
indent_size = 4

[*.sql]
indent_size = 2

[requirements*.txt]
indent_size = 4

[*.{dockerfile,Dockerfile}]
indent_size = 4 